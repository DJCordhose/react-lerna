{
  "name": "react-showcase",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.5",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/testcafe": "^4.3.1",
    "@testing-library/user-event": "^12.5.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.7",
    "i18next": "^19.8.4",
    "i18next-xhr-backend": "^3.2.2",
    "postcss": "7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.7.4",
    "react-redux": "^7.2.0",
    "react-scripts": "4.0.1",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.2",
    "typescript": "~4.1.2"
  },
  "scripts": {
    "start": "yarn tailwind:prepare && react-scripts start",
    "build": "cross-env NODE_ENV=production yarn tailwind:prepare && react-scripts build",
    "test": "yarn tailwind:prepare && react-scripts test",
    "eject": "react-scripts eject",
    "serve": "serve -s build",
    "e2e": "testcafe chrome testcafe/",
    "e2e:crawl": "testcafe chrome testcafe/App.crawl.ts",
    "e2e:watch": "testcafe chrome testcafe/ -L",
    "e2e:debug": "testcafe chrome testcafe/ --debug-on-fail",
    "tailwind:prepare": "postcss src/assets/tailwind.css -o src/assets/main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "9",
    "cross-env": "^7.0.3",
    "postcss-cli": "7",
    "serve": "^11.3.2",
    "testcafe": "^1.9.4"
  }
}
